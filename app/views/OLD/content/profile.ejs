<div id="sidebar">
    <h4> <%= user.firstName %>'s Account</h4>
    <ul>
        <li id="navProfile"><a href="#" class="text-danger">Profile</a></li>
        <li ><a href="#" class="text-danger">Security</a></li>
        <li id="navHistory"><a href="#" class="text-danger">History</a></li>
      </ul>    
  </div>

 
<div class="container-fluid" style="background-color: #ff0000; height: 100%; padding-top: 100px;">

     <!-- PROFILE DIV -->
  <div id="divProfile" class="position-absolute top-50 start-50 translate-middle bg-light p-5 rounded-4">
    <% if(messages.length > 0) { %>
        <div id="messageArea" class="alert alert-success ">
          <%= messages %>
        </div>
      <% } %> 
    <form method="POST" id="registerForm" novalidate>
        <input type="hidden" name="id" value="<%= user._id %>">
        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <label for="firstName">First Name</label>
                    <input class="form-control" type="text" name="firstName" id="firstName" value= "<%= user.firstName %>" required>
                </div>
                <div class="col-md-6">
                    <label for="lastName">Last Name</label>
                    <input class="form-control" type="text" name="lastName" id="lastName" value= "<%= user.lastName %>" required>
                </div>
            </div>
        </div>
        <div class="form-group mt-4">
            <div class="col-md-12">
                <label for="username">Username</label>
                <input type="text" class="form-control" id="username" name="username"  required
                value= "<%= user.username %>" disabled>
            </div>
            <!-- <div class="form-group mt-4">
                <label for="userType">User Type</label>
                <input type="text" class="form-control" id="IDuserType" name="userType" required value= "<%= user.userType %>" disabled>
            </div> -->
        </div>
        <div class="form-group mt-2">
            <div class="row">
                <div class="col-md-12">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="emailAddress" name="emailAddress" required
                    value= "<%= user.emailAddress %>">
                </div>
            </div>
        </div>

        <div class="d-grid gap-2 mt-4 btn-group">
            <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                <button  id="submitButton" type="submit" class="btn btn-outline-primary">Save</button>
                <a href="/profile-delete/<%= userID %>" class="btn btn-outline-danger">Delete</a>
                <a href='/' class="btn btn-outline-secondary"> Cancel</a>
              </div>
          </div>            
    </form>             
    </div>

 <!-- HISTORY DIV -->
 <div id="divHistory" class="p-5 text-center" style = "visibility:hidden;  margin-left:250px; background-color: white; width:70%; min-height:70%; border-radius: 40px;">
    <table class="table table-striped" style="padding: 50px;">
        <h2> Volunteering History </h2><br>
        <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Date</th>
              <th scope="col">Ad Owner</th>
              <th scope="col">Title</th>
              <th scope="col">Hours</th>
              <th scope="col">Completed</th>
              <th scope="col">Edit</th>
            </tr>
          </thead>
          <tbody>
            <% for (i = 0; i < 10; i++) { %>
            <tr>   
              <th scope="row"><%= i + 1  %></th>
              <td>15 Sep 2022</td>
              <td>Mr.Walter</td>
              <td>Litter Clean-up</td>
              <td><%= (i + 0.5)%> hrs</td>
              <td>Yes</td>
              <td><a href="" class="btn btn-outline-dark btn-sm"><i class="fas fa-pencil-alt"></i></a>
              <a href="" class="btn btn-outline-danger btn-sm"><i class="fas fa-trash-alt"></i></a>
              </td>
            </tr>
            <% } %>
            <tr>
                <th></th><td></td><td></td><td></td><td>Total: 75.5 hrs</td><td></td><td></td>
            </tr>
          </tbody>
    </table>
 </div>


</div>



<script>
    document.getElementById("navHistory").onclick = function() {
        console.log("T");
        document.getElementById("divProfile").style.visibility = "hidden";
        document.getElementById("divHistory").style.visibility = "visible";
};
document.getElementById("navProfile").onclick = function() {
        console.log("T");
        document.getElementById("divProfile").style.visibility = "visible";
        document.getElementById("divHistory").style.visibility = "hidden";
};
</script>