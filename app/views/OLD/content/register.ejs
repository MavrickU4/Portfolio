<div class="container-fluid container-register flex-grow-1" style="background-color: #f73838;">
  <br>
  <div class="row row-cols-1 row-cols-md-2 g-4 text-center mt-5" style="margin: auto;">
    <div class="col">
      <div class="card" style="background: none;height:630px;border: none;">
        <div class="position-absolute top-50 start-50 translate-middle" style="background: none;">
          <h1 class="display-6 text-white">Join <u>a Helping Hand</u>, a growing community of positivity that allows you to be, or find a Volunteer!</h1>
        </div>
      </div>
    </div>

    <!--SECOND DIV BOX -->
    <div class="col">
      <div class="card text-center register">
        <div class="card-body">
          <h1 class="display-4">Sign Up</h1>
          <!-- Message Area -->
          <% if(messages.length> 0) { %>
            <div id="messageArea" class="alert alert-danger">
              <%= messages %>
            </div>
            <% } %>
              <form method="POST" id="registerForm" novalidate>
                <p class="hint-text">Create your own account. It's free and only takes a minute.</p>
                <div class="form-group">
                  <div class="row">
                    <p class="lead"><i class="fas fa-user-shield"></i> Personal Information</p>
                    <div class="col-md-6">
                      <input class="form-control" type="text" name="firstName" id="firstName" placeholder="First Name"
                        required>
                    </div>
                    <div class="col-md-6">
                      <input class="form-control" type="text" name="lastName" id="lastName" placeholder="Last Name"
                        required>
                    </div>
                  </div>
                </div>
                <div class="form-group mt-2">
                  <div class="row">
                    <div class="col-md-12">
                      <input type="email" class="form-control" id="emailAddress" name="emailAddress" required value=""
                        placeholder="Email">
                    </div>
                  </div>
                </div>
                <!--
                <div class="form-group mt-2">
                  <div class="row">
                    <div class="col-md-12">
                      <select class="form-select" name="userType">
                        <option selected>User Type</option>
                        <option value="Admin">Admin</option>
                        <option value="User">User</option>
                      </select>
                    </div>
                  </div>
                </div>-->

                <div class="form-group mt-4">
                  <div class="row">
                    <p class="lead"><i class="fas fa-database"></i> System Identification</p>
                    <div class="col-md-12">
                      <input type="text" class="form-control" id="username" name="username" required value=""
                        placeholder="Username">
                    </div>
                  </div>
                </div>

                <div class="form-group mt-2">
                  <div class="row">
                    <div class="col-md-12">
                      <input type="password" class="form-control" id="password" name="password" required value=""
                        placeholder="Password">
                    </div>
                  </div>
                </div>

                <div class="form-group mt-2">
                  <div class="row">
                    <div class="col-md-12">
                      <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required
                        value="" placeholder="Confirm Password">
                    </div>
                  </div>
                </div>


                <div class="d-grid gap-2 mt-2 btn-group">
                  <div class="btn-group" role="group" aria-label="Buttons">
                    <button id="submitButton" type="submit" class="btn btn-outline-primary btn-lg">
                      <i class="fas fa-user-plus"></i> Register</button>
                    <button onclick="location.href = 'login'" id="cancelButton" type="reset" class="btn btn-outline-warning btn-lg">
                      <i class="fas fa-undo" ></i> Cancel</button>
                  </div>
                </div>
              </form>


              <p class="text-center text-muted small">
                Already have an account?
                <a class="link" href="/login">Sign in</a>
              </p>
        </div>

      </div>
    </div>
  </div>
  <br>
  <br>
  <br>
</div>

</div>